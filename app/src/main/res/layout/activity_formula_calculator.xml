<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wsmith.formulacalc.FormulaCalculator">

    <EditText
        android:id="@+id/txtNumChoices"
        android:layout_width="152dp"
        android:layout_height="37dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="# of choices"
        android:inputType="textUri|textPersonName|number"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.499" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="369dp"
        android:text="Compute Binomial Probability"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="204dp" />

    <TextView
        android:id="@+id/lblNumChoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="37dp"
        android:text="# of Choices"
        app:layout_constraintRight_toLeftOf="@+id/txtNumChoices"
        app:layout_constraintTop_toBottomOf="@+id/lblSuccessProb"
        android:layout_marginEnd="5dp" />

    <TextView
        android:id="@+id/lblNumSuccesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="26dp"
        android:text="# successes"
        app:layout_constraintRight_toLeftOf="@+id/txtNumSuccesses"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtNumSuccesses"
        android:layout_width="150dp"
        android:layout_height="39dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="# of successes"
        android:inputType="textNoSuggestions|textPersonName|number"
        app:layout_constraintTop_toBottomOf="@+id/txtNumChoices"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.499" />

    <TextView
        android:id="@+id/lblSuccessProb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success probability"
        app:layout_constraintRight_toLeftOf="@+id/txtSuccessProbability"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/lblNumSuccesses" />

    <EditText
        android:id="@+id/txtSuccessProbability"
        android:layout_width="152dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Probability of Success"
        android:inputType="textPersonName"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNumSuccesses"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.499" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-32dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onClick_Calculate"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSuccessProbability"
        app:layout_constraintVertical_bias="0.16"
        app:layout_constraintHorizontal_bias="0.498" />

    <TextView
        android:id="@+id/lblProbLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="EVENT Probability"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/txtVwResult"
        android:layout_width="104dp"
        android:layout_height="47dp"
        android:text="-"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/lblProbLabel"
        tools:layout_editor_absoluteX="151dp" />

</android.support.constraint.ConstraintLayout>
